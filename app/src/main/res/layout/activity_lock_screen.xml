<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.leprechaun.leprechaun.LockScreenActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/background"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <DigitalClock
        android:id="@+id/clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:textSize="50sp"
        android:textColor="#FFFFFF" />

    <TextView android:id="@+id/date_view"
        android:layout_below="@+id/clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:textColor="#FFFFFF"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/slide_container"
        android:layout_marginBottom="50dp"
        android:layout_below="@+id/date_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/slide_layout">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.8"
                android:id="@+id/lock_screen_ad"/>


        </LinearLayout>

        <ImageView
            android:layout_width="59dp"
            android:layout_height="59dp"
            android:alpha="0.3"
            android:src="@drawable/left_arrow"
            android:id="@+id/left_arrow_one"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <ImageView
            android:layout_width="59dp"
            android:layout_height="59dp"
            android:alpha="0.3"
            android:src="@drawable/left_arrow"
            android:id="@+id/left_arrow_two"
            android:layout_toRightOf="@+id/left_arrow_one"
            android:layout_marginLeft="-40dp"
            android:layout_centerVertical="true" />

        <ImageView
            android:layout_width="59dp"
            android:layout_height="59dp"
            android:alpha="0.3"
            android:src="@drawable/right_arrow"
            android:id="@+id/right_arrow_one"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

        <ImageView
            android:layout_width="59dp"
            android:layout_height="59dp"
            android:alpha="0.3"
            android:src="@drawable/right_arrow"
            android:id="@+id/right_arrow_two"
            android:layout_toLeftOf="@+id/right_arrow_one"
            android:layout_marginRight="-40dp"
            android:layout_centerVertical="true" />

    </RelativeLayout>

</RelativeLayout>
